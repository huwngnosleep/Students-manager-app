extends ../layouts/common

block content
    if errors
        each error in errors
            .alert.alert-danger= error

    #container-form.container
        h2 Login
        form(action="/login" method="POST")
            .form-group
                label(for='account') Account
                input.form-control(type='text', placeholder="admin", name="account")
            .form-group
                label(for='password') Password
                input.form-control(type='password', placeholder="admin", name="password")
            button.btn.btn-primary.mt-2 Login
