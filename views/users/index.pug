extends ../layouts/common

block content
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.container-fluid.d-flex.justify-content-between.align-items-center
        a.navbar-brand(href="/users") Students List
        btn.btn.btn-outline-primary
            a.nav-link.active(aria-current='page', href='/new') Add new student
        form.d-flex(action="/users/search" method="GET")
            input.form-control.me-2(type='text', placeholder='Enter student name...', name="name")
            button.btn.btn-outline-primary Search
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Full Name
                th(scope='col') ID
                th(scope='col') View
        tbody
            each user, index in users
                tr
                    th= index + 1
                    td= user.name
                    td= user.id
                    td 
                        a(href="/users/" + user.id) View Detail
    form(action="/users")
        .pagination.justify-content-center
            button.btn.btn-primary Go to page
            select.page-item(name="page")
                option(value="") ...
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
                option(value="6") 6
            
